{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:js-app",
    "helpers:disableTypesNodeMajor",
    "schedule:earlyMondays",
    "group:allNonMajor",
    "schedule:monthly",
  ],
  prHourlyLimit: 5,
  prConcurrentLimit: 5,
  branchConcurrentLimit: 5,
  labels: ["dependencies"],
  baseBranches: ["main"],
  packageRules: [
    {
      matchUpdateTypes: ["patch", "minor"],
      matchManagers: ["npm"],
      automerge: true,
    },
    {
      groupName: "build deps",
      matchPackageNames: [
        "/esbuild/",
        "/ts(down|up)/",
        "/roll(down|up)/",
        "/(rs|web)pack/",
        "/unplugin/",
      ],
    },
    {
      groupName: "dev deps",
      automerge: true,
      matchPackageNames: [
        "/^@tsconfig//",
        "/eslint/",
        "/-staged$/",
        "/prettier/",
        "/typescript/",
        "/simple-git-hooks/",
      ],
    },
    {
      rangeStrategy: "replace",
      matchPackageNames: ["/@nolyfill/*/", "/@socketregistry/*/"],
    },
    {
      matchDatasources: ["node-version"],
      rangeStrategy: "replace",
    },
    {
      matchDepTypes: ["action"],
      pinDigests: true,
      prPriority: 999,
    },
  ],
}
